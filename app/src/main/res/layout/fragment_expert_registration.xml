<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0067A5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/fullNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textColor="#FFFFFF"
                android:text="Full Name"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/fullNameEditText"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_below="@id/fullNameTextView"
                android:layout_marginTop="8dp"
                android:background="@drawable/my_border"
                android:hint="Enter your full name"/>

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textColor="#FFFFFF"
                android:text="Email"
                android:textSize="18sp"
                android:layout_below="@id/fullNameEditText"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/white"
                android:layout_below="@id/emailTextView"
                android:layout_marginTop="8dp"
                android:background="@drawable/my_border"
                android:hint="Enter your email"/>

            <TextView
                android:id="@+id/passwordTextView"
                android:fontFamily="@font/lato_regular"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="18sp"
                android:layout_below="@id/emailEditText"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@id/passwordTextView"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/my_border"
                android:hint="Enter your password"
                android:inputType="textPassword"/>
            <TextView
                android:id="@+id/passwordConfirmTextView"
                android:fontFamily="@font/lato_regular"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="18sp"
                android:layout_below="@id/passwordEditText"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/passwordConfirmEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@id/passwordConfirmTextView"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/my_border"
                android:hint="Enter your password"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/dateOfBirthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth (mm/dd/yyyy)"
                android:textSize="18sp"
                android:fontFamily="@font/lato_regular"
                android:textColor="#FFFFFF"
                android:layout_below="@id/passwordConfirmEditText"
                android:layout_marginTop="16dp"/>


            <EditText
                android:id="@+id/dateOfBirthEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@id/dateOfBirthTextView"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/my_border"
                android:hint="Select your date of birth"
                android:focusable="false"
                android:onClick="showDatePickerDialog"/>
            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textColor="#FFFFFF"
                android:text="Address"
                android:textSize="18sp"
                android:layout_below="@id/dateOfBirthEditText"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@id/addressTextView"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:hint="Enter your Address"
                android:textSize="16sp"
                android:inputType="text"
                android:background="@drawable/my_border"/>
            <TextView
                android:id="@+id/numberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textColor="#FFFFFF"
                android:text="Mobile Number"
                android:textSize="18sp"
                android:layout_below="@id/addressEditText"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/numberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@id/numberTextView"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:hint="Enter your Mobile Number"
                android:textSize="16sp"
                android:inputType="text"
                android:background="@drawable/my_border"/>

            <TextView
                android:id="@+id/professionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profession"
                android:fontFamily="@font/lato_regular"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_below="@id/numberEditText"
                android:layout_marginTop="16dp"/>

            <Spinner
                android:id="@+id/professionSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@id/professionTextView"
                android:layout_marginTop="8dp"/>
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter"
                android:layout_below="@+id/professionSpinner"
                android:contentDescription="Profile Image"
                android:src="@drawable/baseline_add_photo_alternate_25" />

            <Button
                android:id="@+id/uploadImageButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/professionSpinner"
                android:backgroundTint="#003B5F"
                android:text="Upload Image" />
            <Button
                android:id="@+id/submitButton"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:fontFamily="@font/lato_bold"
                android:text="Submit"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:layout_below="@id/uploadImageButton"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="140dp"
                android:backgroundTint="@android:color/white"/>

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/submitButton"
                android:layout_marginTop="30dp"
                android:src="@drawable/img"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
